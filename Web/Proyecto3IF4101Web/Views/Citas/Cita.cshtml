@{
    ViewData["Title"] = "Gestion de Citas";
}

@model Proyecto3IF4101Web.Models.CitasModel;

<div class="container-fluid">
    <div class="row">

        <main class="col-md-12 ms-sm-auto px-md-1">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-2 border-bottom">

                <div class="col col-md-3">
                    <form name="formVacuna" id="formVacuna">

                        <div class="col-12">
                            <label for="paciente" class="form-label">Cedula de Paciente</label>
                            <select class="form-select form-select mb-3" name="cedula" id="cedula" required>
                                <option value=0>Seleccione una Cédula</option>
                                @foreach (Pacientes temp in ViewBag.Pacientes)
                                {
                                    <option value="@temp.CEDULA">
                                        @temp.CEDULA  @temp.NOMBRE
                                    </option>

                                }
                            </select>
                        </div>

                        <div class="col-12">
                            <label for="centrofor" class="form-label">Centro de Salud</label><br />
                            <input type="text" id="centro" name="centro" required />
                        </div>

                        <div class="col-12  ">
                            <label for="start">Descripción:</label>

                            <textarea class="form-control" type="textArea" id="desc" name="desc" disabled>
                            </textarea>

                        </div>

                        <div class="col-12 form-group ">
                            <label for="start">Fecha Cita:</label>
                            <input class="form-control" type="datetime-local" placeholder="dd-mm-yyyyyThh:mm" id="horaCita" name="horaCita" required>
                        </div>

                        <div class="col-12">
                            <label for="especialidadfor" class="form-label">Especialidad</label><br />
                            <input type="text" id="especialidad" name="especialidad" required />
                        </div>

                        <div class="text-center">
                            <span id="resultado"></span>
                        </div>
                        <div class="col-8" id="actualizar">
                        </div>
                        <br />
                        <div class="col-8 ">
                            <input type="button" onclick="RegistrarCita()" value="Registrar" class="btn btn-lg btn-primary btn-block" />
                        </div>
                    </form>
                    <br />
                </div>


                <div class="col col-md-9" style="padding-left:7%">

                    <label for="paciente" class="form-label">Buscar Vacunas de Paciente</label>
                    <select class="form-select form-select mb-3" name="paciente" id="paciente" required>
                        <option value=0>Seleccione una Cédula</option>
                        @foreach (Pacientes temp in ViewBag.Pacientes)
                        {
                            <option value="@temp.CEDULA">
                                @temp.CEDULA  @temp.NOMBRE
                            </option>

                        }
                    </select>
                    <input type="button" onclick="DatosPacienteCitas()" value="Buscar" class="btn btn-lg btn-primary" />

                    <table id="TableCitas" name="TableCitas" class="table table-striped table-responsive table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Cedula</th>
                                <th>Centro Salud</th>
                                <th>Fecha</th>
                                <th>Especialidad</th>
                                <th>Descripción</th>
                            </tr>
                        </thead>
                        <tbody id="TCitas">
                        </tbody>
                    </table>
                    <div>
                        <span id="borrado"></span>
                    </div>
                </div>
            </div>
        </main>

    </div>

</div>